import {
    "github.com/myapp/cms"
}

// name: FeatureList
// param: features []cms.Feature
el {
    // Scoped CSS: These styles are scoped to this component (e.g., .interactive-card-x7z9)
    css {
        .interactive-card {
            transition "all 0.3s ease"
            border _1px solid transparent
            border-radius _0.5rem
            padding _1.5rem
        }
        .interactive-card:hover {
            transform "translateY(-5px)"
            background-color "#1e293b" // slate-800
            border-color "#3b82f6"     // blue-500
            box-shadow "0 10px 15px -3px rgba(0, 0, 0, 0.5)"
        }
    }

    section&features.py-20 {
        .container.mx-auto.px-4 {
            h2.text-center.text-4xl.font-bold.mb-16 "Why Choose Us?"
            
            .grid.md:grid-cols-2.lg:grid-cols-3.gap-12 {
                // Converting a slice to an iterator inline
                each feat of="`cms.NewFeatureIterator(features)`" {
                    .feature-item.text-center.interactive-card {
                        // Dynamic class attribute interpolation
                        .icon.mb-6.mx-auto.h-16.w-16.flex.items-center.justify-center.rounded-full.bg-blue-900 {
                            i class="fa fa-`feat.Icon`"
                        }
                        
                        h3.text-xl.font-bold.mb-3 "`feat.Title`"
                        p.text-slate-400.leading-relaxed "`feat.Description`"
                        
                        if "`feat.HasLink`" {
                            a.text-blue-400.hover:underline href="`feat.LinkURL`" "Learn more â†’"
                        }
                    }
                }
            }
        }
    }
}